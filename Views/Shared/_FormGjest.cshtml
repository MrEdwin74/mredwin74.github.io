@model Ex1.Models.Gjest

<form class="form-groups" asp-controller="Home" asp-action="ListGjester" method="post">

    <!-- Name -->
    <div class="form-group">
        <label for="message" class="col-sm-4 control-label">Name</label>
        <div class="col-sm-8" style="padding-bottom: 5px">
            <!-- input type="text" class="form-control" name="name" -->
            <input type="text" class="form-control" asp-for="gName">
        </div>
    </div>

    <!-- Title -->
    <div class="form-group">
        <label for="message" class="col-sm-4 control-label">Title</label>
        <div class="col-sm-8" style="padding-bottom: 5px">
            <!-- input type="text" class="form-control" name="tittel" -->
            <input type="text" class="form-control" asp-for="txtTittel">
        </div>
    </div>

    <!-- Textarea -->
    <div class="form-group">
        <label for="message" class="col-sm-4 control-label">Message</label>
        <div class="col-sm-8" style="padding-bottom: 5px">
            <!-- textarea class="form-control" rows="4" name="message"></textarea -->
            <textarea class="form-control" rows="4" asp-for="txtMessage"></textarea>
        </div>
    </div>

    <!-- Button -->
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8" style="text-align: right;">
            <input type="submit" class="btn btn-primary" >
        </div>
    </div>
</form>